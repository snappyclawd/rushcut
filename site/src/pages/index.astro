---
import Layout from '../layouts/Layout.astro'

// The RushCut logo as an inline SVG component
const logoSvg = `<svg viewBox="0 0 488 486" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M402.562 66.126H162.371l50.064 87.336a131.5 131.5 0 0 1 53.852-15.688c56.5 0 102.3 46.88 102.3 104.709 0 39.377-18.79 74.519-52.635 91.539l86.61 151.048c46.699 0 84.547-47.809 84.547-86.563V152.672c0-47.8-37.848-86.546-84.547-86.546Z" fill="currentColor"/>
  <path d="M266.287 347.192c-56.5 0-102.302-46.88-102.302-104.709 0-24.634 10.243-47.284 22.242-65.148L84.548 0C37.854 0 0 38.753 0 86.546v245.836C0 380.187 37.854 418.939 84.548 418.939h240.193l-41.928-73.126a106.3 106.3 0 0 1-16.526 1.379Z" fill="currentColor"/>
  <path fill-rule="evenodd" d="M265.691 267.402c-13.524 0-24.487-11.157-24.487-25.063 0-13.843 10.963-25.065 24.487-25.065 13.525 0 24.489 11.222 24.489 25.065 0 13.843-10.964 25.063-24.489 25.063Zm0-103.391c-42.263 0-76.524 35.259-76.524 78.328 0 43.257 34.261 78.327 76.524 78.327 42.266 0 76.527-35.07 76.527-78.327 0-43.259-34.261-78.328-76.527-78.328Z" fill="currentColor"/>
</svg>`
---

<Layout title="RushCut — Triage your footage before the edit">

  <!-- ==================== NAV ==================== -->
  <nav class="fixed top-0 inset-x-0 z-50 border-b border-white/[0.06]" id="nav">
    <div class="mx-auto flex max-w-[1400px] items-center justify-between px-6 py-4 lg:px-10">
      <a href="/" class="group flex items-center gap-2.5">
        <span class="inline-flex size-8 text-brand-500 transition-transform group-hover:scale-110">
          <Fragment set:html={logoSvg} />
        </span>
        <span class="text-[15px] font-bold tracking-tight text-white">RushCut</span>
      </a>
      <div class="flex items-center gap-8 text-[13px] font-medium text-surface-400">
        <a href="#features" class="hidden transition hover:text-white sm:block">Features</a>
        <a href="#how-it-works" class="hidden transition hover:text-white sm:block">How it works</a>
        <a href="#pricing" class="hidden transition hover:text-white sm:block">Pricing</a>
        <a href="#pricing" class="relative overflow-hidden rounded-full bg-white px-5 py-2 font-semibold text-surface-950 transition hover:bg-surface-100">
          Buy for <span class="line-through opacity-60">$79</span> $49
        </a>
      </div>
    </div>
  </nav>

  <!-- Blur backdrop for nav on scroll -->
  <script>
    const nav = document.getElementById('nav')
    window.addEventListener('scroll', () => {
      if (window.scrollY > 20) {
        nav?.classList.add('bg-surface-950/70', 'backdrop-blur-2xl')
      } else {
        nav?.classList.remove('bg-surface-950/70', 'backdrop-blur-2xl')
      }
    })
  </script>

  <!-- ==================== HERO ==================== -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <!-- Background effects -->
    <div class="pointer-events-none absolute inset-0">
      <!-- Large gradient orb -->
      <div class="absolute top-[-20%] left-1/2 -translate-x-1/2 w-[1000px] h-[800px] rounded-full bg-brand-500/[0.07] blur-[120px]"></div>
      <!-- Grid pattern -->
      <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:60px_60px] [mask-image:radial-gradient(ellipse_at_center,black_30%,transparent_70%)]"></div>
    </div>

    <div class="relative mx-auto max-w-[1400px] w-full px-6 pt-32 pb-20 lg:px-10 lg:pt-40 lg:pb-32">
      <div class="max-w-3xl">
        <!-- Pill badge -->
        <div class="animate-slide-up mb-8 inline-flex items-center gap-2 rounded-full border border-white/[0.08] bg-white/[0.03] py-1.5 pl-1.5 pr-4">
          <span class="rounded-full bg-brand-500 px-2.5 py-0.5 text-[11px] font-bold uppercase tracking-wider text-white">New</span>
          <span class="text-[13px] text-surface-400">Native macOS app for videographers</span>
        </div>

        <!-- Headline -->
        <h1 class="animate-slide-up-delayed text-[clamp(2.5rem,6vw,5rem)] font-extrabold leading-[1.05] tracking-[-0.035em]">
          Triage your footage<br/>
          <span class="text-gradient">before the edit.</span>
        </h1>

        <!-- Sub -->
        <p class="animate-slide-up-delayed-2 mt-6 max-w-xl text-lg leading-relaxed text-surface-400 lg:text-xl">
          200+ clips. Identical thumbnails. Hours of scrubbing clips, one by one, before the real work starts. RushCut fixes that.
        </p>

        <!-- CTA row -->
        <div class="animate-slide-up-delayed-2 mt-10 flex flex-wrap items-center gap-4">
          <a href="#pricing" class="group relative inline-flex items-center gap-2 rounded-full bg-brand-500 px-7 py-3.5 text-[15px] font-bold text-white shadow-[0_0_40px_rgba(249,115,22,0.3)] transition hover:bg-brand-600 hover:shadow-[0_0_60px_rgba(249,115,22,0.4)]">
            Buy for <span class="line-through opacity-60">$79</span> $49
            <svg class="size-4 transition-transform group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"/></svg>
          </a>
          <span class="text-[13px] text-surface-600">Launch price. One-time purchase. No subscription.</span>
        </div>
      </div>

      <!-- Hero visual: floating app mockup -->
      <div class="mt-16 lg:mt-20 animate-fade-in">
        <div class="relative">
          <!-- Window chrome mockup -->
          <div class="rounded-xl border border-white/[0.08] bg-surface-900/80 shadow-2xl shadow-black/40 overflow-hidden">
            <!-- Title bar -->
            <div class="flex items-center gap-2 border-b border-white/[0.06] px-4 py-3">
              <div class="flex gap-1.5">
                <div class="size-3 rounded-full bg-[#ff5f57]"></div>
                <div class="size-3 rounded-full bg-[#febc2e]"></div>
                <div class="size-3 rounded-full bg-[#28c840]"></div>
              </div>
              <div class="mx-auto flex items-center gap-1.5 text-[11px] text-surface-500">
                <span class="inline-flex size-4 text-brand-500"><Fragment set:html={logoSvg} /></span>
                RushCut — AAU Port Mac 2026
              </div>
              <div class="w-12"></div>
            </div>
            <!-- App content mockup -->
            <div class="flex">
              <!-- Sidebar -->
              <div class="hidden w-52 shrink-0 border-r border-white/[0.06] bg-surface-950/50 sm:flex sm:flex-col">
                <!-- Filter section -->
                <div class="flex-1 overflow-hidden p-3">
                  <div class="mb-2 text-[10px] font-semibold uppercase tracking-widest text-surface-600">Filter</div>
                  <div class="mb-1.5 text-[10px] font-medium text-surface-500">Rating</div>
                  <div class="space-y-0.5 text-[11px] font-mono">
                    <div class="flex items-center rounded-md bg-brand-500/15 px-2 py-1 font-semibold text-brand-400">
                      All
                    </div>
                    <div class="flex items-center gap-1.5 rounded-md px-2 py-1 text-surface-500">
                      5 <span class="text-surface-600">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
                    </div>
                    <div class="flex items-center gap-1.5 rounded-md px-2 py-1 text-surface-500">
                      4 <span class="text-surface-600">&#9733;&#9733;&#9733;&#9733;</span>
                    </div>
                    <div class="flex items-center gap-1.5 rounded-md px-2 py-1 text-surface-500">
                      3 <span class="text-surface-600">&#9733;&#9733;&#9733;</span>
                    </div>
                    <div class="flex items-center gap-1.5 rounded-md px-2 py-1 text-surface-500">
                      2 <span class="text-surface-600">&#9733;&#9733;</span>
                    </div>
                    <div class="flex items-center gap-1.5 rounded-md px-2 py-1 text-surface-500">
                      1 <span class="text-surface-600">&#9733;</span>
                    </div>
                  </div>
                </div>

                <!-- Folder Preview + Commit -->
                <div class="border-t border-white/[0.06] p-3">
                  <div class="mb-2 flex items-center justify-between">
                    <div class="text-[10px] font-semibold uppercase tracking-widest text-surface-600">Folder Preview</div>
                    <div class="flex gap-1">
                      <div class="flex size-5 items-center justify-center rounded bg-white/[0.06]">
                        <svg class="size-3 text-surface-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z"/><path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6Z"/></svg>
                      </div>
                      <div class="flex size-5 items-center justify-center rounded bg-white/[0.06]">
                        <svg class="size-3 text-surface-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"/></svg>
                      </div>
                    </div>
                  </div>
                  <div class="space-y-0.5 text-[11px] font-mono">
                    <div class="flex items-center gap-1 text-surface-400">
                      <svg class="size-3 shrink-0 text-brand-500" fill="currentColor" viewBox="0 0 24 24"><path d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/></svg>
                      <span class="font-semibold text-surface-300">RushCut/</span>
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <span class="text-surface-700 text-[9px]">&rsaquo;</span>
                      <svg class="size-2.5 shrink-0 text-yellow-600" fill="currentColor" viewBox="0 0 24 24"><path d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/></svg>
                      Three/ <span class="text-surface-700 ml-auto">(1)</span>
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <span class="text-surface-700 text-[9px]">&rsaquo;</span>
                      <svg class="size-2.5 shrink-0 text-yellow-600" fill="currentColor" viewBox="0 0 24 24"><path d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/></svg>
                      Warmup/ <span class="text-surface-700 ml-auto">(8)</span>
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <span class="text-surface-700 text-[9px]">&rsaquo;</span>
                      <svg class="size-2.5 shrink-0 text-yellow-600" fill="currentColor" viewBox="0 0 24 24"><path d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/></svg>
                      Quiet/ <span class="text-surface-700 ml-auto">(32)</span>
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <span class="text-surface-700 text-[9px]">&rsaquo;</span>
                      <svg class="size-2.5 shrink-0 text-yellow-600" fill="currentColor" viewBox="0 0 24 24"><path d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/></svg>
                      Loud Peaks/ <span class="text-surface-700 ml-auto">(31)</span>
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <span class="text-surface-700 text-[9px]">&rsaquo;</span>
                      <svg class="size-2.5 shrink-0 text-yellow-600" fill="currentColor" viewBox="0 0 24 24"><path d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/></svg>
                      5-star/ <span class="text-surface-700 ml-auto">(3)</span>
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <span class="text-surface-700 text-[9px]">&rsaquo;</span>
                      <svg class="size-2.5 shrink-0 text-yellow-600" fill="currentColor" viewBox="0 0 24 24"><path d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/></svg>
                      4-star/ <span class="text-surface-700 ml-auto">(2)</span>
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <span class="text-surface-700 text-[9px]">&rsaquo;</span>
                      <svg class="size-2.5 shrink-0 text-yellow-600" fill="currentColor" viewBox="0 0 24 24"><path d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z"/></svg>
                      1-star/ <span class="text-surface-700 ml-auto">(1)</span>
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <svg class="size-2.5 shrink-0 text-surface-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"/></svg>
                      rushcut.json
                    </div>
                    <div class="flex items-center gap-1 pl-3 text-surface-500">
                      <svg class="size-2.5 shrink-0 text-surface-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"/></svg>
                      rushcut.csv
                    </div>
                  </div>
                  <div class="mt-2 text-[10px] text-surface-600">
                    129 untouched clips will be skipped
                  </div>
                  <!-- Commit button -->
                  <button class="mt-3 flex w-full items-center justify-center gap-2 rounded-xl bg-brand-500 px-3 py-2.5 text-[12px] font-bold text-white shadow-lg shadow-brand-500/20">
                    <svg class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/></svg>
                    Commit
                  </button>
                </div>
              </div>
              <!-- Grid: 5 columns x 4 rows = 20 clips -->
              <div class="grid flex-1 grid-cols-3 gap-1.5 p-1.5 sm:grid-cols-4 lg:grid-cols-5">
                {Array.from({ length: 20 }).map((_, i) => {
                  const ratings = [5, 4, 3, 5, 0, 4, 3, 0, 5, 4, 3, 0, 5, 4, 0, 3, 5, 0, 4, 5]
                  const tags = [['establishment shot'], ['keeper'], [], ['loud peaks'], [], [], ['b-roll'], [], ['keeper', 'warmup'], [], [], ['quiet'], [], ['loud peaks'], [], [], ['keeper'], [], ['b-roll', 'warmup'], []]
                  const filenames = ['01-beach.MOV','02-crowd.MOV','03-sunset.MOV','04-drone.MOV','05-park.MOV','06-city.MOV','07-waves.MOV','08-trail.MOV','09-monty.MOV','10-field.MOV','11-game.MOV','12-skate.MOV','13-rally.MOV','14-match.MOV','15-dusk.MOV','16-surf.MOV','17-hike.MOV','18-rain.MOV','19-court.MOV','20-lake.MOV']
                  const durations = ['12.4s','8.1s','15.2s','6.7s','22.0s','9.3s','11.8s','14.5s','7.2s','18.6s','5.9s','13.1s','10.4s','16.8s','8.7s','21.3s','7.5s','12.9s','9.8s','15.0s']
                  const tagColors = { 'establishment shot': 'bg-emerald-500', 'keeper': 'bg-green-500', 'loud peaks': 'bg-blue-500', 'b-roll': 'bg-brand-500', 'quiet': 'bg-violet-500', 'warmup': 'bg-green-500' }
                  return (
                    <div class="group flex flex-col overflow-hidden rounded-lg bg-surface-900">
                      {/* Thumbnail */}
                      <div class="relative aspect-video overflow-hidden">
                        <img src={`/thumbs/thumb-${String(i + 1).padStart(2, '0')}.jpg`} alt="" class="absolute inset-0 size-full object-cover" loading="lazy" />
                        {/* Scrub position indicator */}
                        <div class="absolute bottom-0 left-0 h-0.5 bg-brand-500/60" style={`width: ${30 + (i * 13) % 65}%`}></div>
                        {/* Rating badge on thumbnail */}
                        {ratings[i] > 0 && (
                          <div class="absolute top-1 left-1 flex items-center gap-0.5 rounded-full bg-green-500 px-1.5 py-0.5 text-[8px] font-bold text-white shadow">
                            {ratings[i]} <span class="text-[7px]">&#9733;</span>
                          </div>
                        )}
                      </div>
                      {/* Info below thumbnail */}
                      <div class="flex flex-col gap-1 p-1.5">
                        {/* Filename + duration */}
                        <div class="flex items-center justify-between">
                          <span class="truncate text-[8px] font-medium text-surface-200">{filenames[i]}</span>
                          <span class="shrink-0 text-[7px] text-surface-500">{durations[i]}</span>
                        </div>
                        {/* Stars + tags */}
                        <div class="flex items-center justify-between gap-1">
                          <div class="flex items-center">
                            {[1,2,3,4,5].map((star) => (
                              <span class={`text-[8px] ${star <= ratings[i] ? 'text-yellow-400' : 'text-surface-700'}`}>&#9733;</span>
                            ))}
                          </div>
                          {tags[i].length > 0 && (
                            <div class="flex items-center gap-0.5">
                              {tags[i].map((tag) => (
                                <div class={`rounded-full px-1 py-px text-[6px] font-medium text-white ${tagColors[tag] || 'bg-brand-500'}`}>
                                  {tag}
                                </div>
                              ))}
                              <svg class="size-2 text-surface-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6Z" /></svg>
                            </div>
                          )}
                        </div>
                      </div>
                    </div>
                  )
                })}
              </div>
            </div>
          </div>
          <!-- Glow underneath -->
          <div class="absolute -bottom-8 left-1/2 -translate-x-1/2 h-32 w-3/4 rounded-full bg-brand-500/10 blur-[80px]"></div>
        </div>
      </div>
    </div>
